<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Raasti">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/raasti_titel"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_raasti01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/raasti_01" />

            <Button
                android:id="@+id/btn_raasti02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/raasti_02" />

            <Button
                android:id="@+id/btn_raasti03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/raasti_03" />

            <Button
                android:id="@+id/btn_raasti04"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/raasti_04" />


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>